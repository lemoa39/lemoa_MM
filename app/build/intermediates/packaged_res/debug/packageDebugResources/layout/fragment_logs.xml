<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp">
  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="end" android:orientation="horizontal" android:layout_marginBottom="8dp">
    <Button android:id="@+id/btnClearLogs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Clear Logs"/>
  </LinearLayout>
  <TextView android:id="@+id/tvEmptyLogs" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="No transactions logged yet." android:gravity="center" android:padding="24dp" android:visibility="gone"/>
  <ListView android:id="@+id/listLogs" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
</LinearLayout>
