<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.lemoa.mm">
  <uses-permission android:name="android.permission.RECEIVE_SMS"/>
  <uses-permission android:name="android.permission.READ_SMS"/>
  <uses-permission android:name="android.permission/SEND_SMS"/>
  <application android:allowBackup="true" android:label="Lemoa MM" android:icon="@mipmap/ic_launcher"
    android:roundIcon="@mipmap/ic_launcher_round" android:supportsRtl="true" android:theme="@style/Theme.LemoaMM">
    <activity android:name=".ui.MainActivity" android:exported="true" android:screenOrientation="portrait">
      <intent-filter><action android:name="android.intent.action.MAIN"/><category android:name="android.intent.category.LAUNCHER"/></intent-filter>
    </activity>
    <receiver android:name=".sms.IncomingSmsReceiver" android:exported="true" android:permission="android.permission.BROADCAST_SMS">
      <intent-filter android:priority="999"><action android:name="android.provider.Telephony.SMS_RECEIVED"/></intent-filter>
    </receiver>
  </application>
</manifest>
